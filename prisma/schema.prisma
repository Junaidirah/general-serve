generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Untuuk service guruJR
model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  password    String
  image       String?
  role        String   @default("user")
  schools     String
  points      Int?     @default(0)
  accessToken String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Report Report[]

  @@map("users")
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  date      DateTime @default(now())
  location  String?
  activity  String?
  media     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reports")
}

/// this is for PLN
enum PlantType {
  PLTD_KOTARAYA
  PLTM_TOMINI
  THAS_POWER_PALASA
  GSS_BOLANO
  PLN_MOUTONG
  THAS_POWER_MOUTONG
}

model Plant {
  id        String    @id @default(cuid())
  name      String    @unique
  type      PlantType
  machines  Machine[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Machine {
  id         String        @id @default(cuid())
  identifier String
  plantId    String
  plant      Plant         @relation(fields: [plantId], references: [id])
  readings   LoadReading[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LoadReading {
  id        Int      @id @default(autoincrement())
  machineId String
  machine   Machine  @relation(fields: [machineId], references: [id])
  timestamp DateTime
  load      Float
  avgLoad   Float?
  maxLoad   Float?
  minLoad   Float?
  dmSiang   Float?
  dmMalam   Float?
  dmMesin   Float?
  surplus   Float?
  status    String?
  createdAt DateTime

  @@unique([machineId, timestamp])
}
